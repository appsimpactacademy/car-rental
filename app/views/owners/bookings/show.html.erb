<!-- app/views/bookings/show.html.erb -->
<h1>Booking Details</h1>

<table class="table">
  <tbody>
    <tr>
      <th>User</th>
      <td><%= @booking.user.email %></td>
    </tr>
    <tr>
      <th>Vehicle</th>
      <td><%= @booking.vehicle.name %></td>
    </tr>
    <tr>
      <th>Start Date</th>
      <td><%= @booking.start_date %></td>
    </tr>
    <tr>
      <th>End Date</th>
      <td><%= @booking.end_date %></td>
    </tr>
     <tr>
      <th>Start Time</th>
      <td><%= @booking.start_time.strftime("%H:%M %p") %></td>
    </tr>
    <tr>
      <th>End Time</th>
      <td><%= @booking.end_time.strftime("%H:%M %p") %></td>
    </tr>
    <tr>
      <th>Total Amount</th>
      <td><%= number_to_currency(@booking.calculate_total_amount, unit: "Rs. ") %></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_owners_booking_path(@booking), class: 'btn btn-primary' %>
<%= link_to 'Back', owners_bookings_path, class: 'btn btn-secondary' %>
