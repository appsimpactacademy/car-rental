<div class="row">
  <div class="col-md-4">
    <%= link_to admin_owners_path, class: 'text-decoration-none text-white' do %>
      <div class="card mb-4 text-center text-white bg-primary shadow">
				<div class="card-body">
					<div>
						<div class="fs-4 fw-semibold">
							<%= Owner.count %>
							<div>Owners</div>
						</div>
					</div>
				</div>
			</div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to admin_vehicle_types_path, class: 'text-decoration-none' do %>
      <div class="card mb-4 text-center text-white bg-primary shadow">
        <div class="card-body">
          <div>
						<div class="fs-4 fw-semibold">
							<%= VehicleType.count %> 
							<div>Vehicle Types</div>
						</div>
					</div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to admin_vehicles_path, class: 'text-decoration-none' do %>
      <div class="card mb-4 text-center text-white bg-primary shadow">
        <div class="card-body">
          <div>
						<div class="fs-4 fw-semibold">
							<%= Vehicle.count %> 
							<div>Vehicle</div>
						</div>
					</div>
        </div>
      </div>
    <% end %>
  </div>
</div>
