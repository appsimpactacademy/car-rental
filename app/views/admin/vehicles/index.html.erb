<div class="row">
  <div class="col-lg-6">
    <h1 class="fw-bold mt-2 mb-3">Vehicles</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Fuel Type</th>
          <th scope="col">Price per KM</th>
          <th scope="col">Base Price</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @vehicles.each do |vehicle| %>
          <tr>
            <td><%= vehicle.name %></td>
            <td><i class="bi bi-fuel-pump fs-3"></i> <%= vehicle.fuel_type %></td>
            <td><i class="bi bi-speedometer2 fs-3"></i> <%= vehicle.price_per_km %></td>
            <td class="fw-bold">$ <%= vehicle.base_price %></td>
            <td><%= link_to 'View', admin_vehicle_path(vehicle), class: 'btn btn-primary' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
