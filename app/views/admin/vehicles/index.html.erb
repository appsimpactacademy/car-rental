<div class="row">
  <div class="col-lg-6">
    <h1 class="fw-bold mt-2 mb-3">Vehicles</h1>
  </div>
  <div class="col-lg-6 text-end">
    <%= link_to 'Add new vehicle', new_admin_vehicle_path, class: "btn btn-primary mt-2 mb-2" %>
  </div>
</div>
<div class="row">
  <% @vehicles.each do |vehicle| %>
    <div class="col-md-12 mb-4">
      <div class="d-flex shadow p-3 mb-5 bg-white rounded">
        <% if vehicle.vehicle_images.attached? %>
          <%= image_tag url_for(vehicle.vehicle_images.last), class: "flex-shrink-0 me-3 rounded", size: "150x150" %>
        <% else %>
          <%= image_tag url_for("https://themesflat.co/html/motorxhtml/assets/images/gallary/thum2.jpg"), class: "flex-shrink-0 me-3 rounded", size: "150x150" %>
        <% end %>
        <div class="flex-grow-1 ms-3">
          <h5 class="mt-0"><%= link_to vehicle.name, admin_vehicle_path(vehicle), class: "text-decoration-none text-dark" %></h5>
          <div class="row">
            <div class="col-lg-4">
              <p class="mb-0"><i class="bi bi-fuel-pump fs-3"></i> <%= vehicle.fuel_type %></p>
            </div>
            <div class="col-lg-4">
              <p class="mb-0"><i class="bi bi-speedometer2 fs-3"></i> <%= vehicle.price_per_km %></p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-lg-6">
              <p class="mb-0 fw-bold">$ <%= vehicle.base_price %></p>
            </div>
            <div class="col-lg-6 fw-bold">
              <%= link_to admin_vehicle_path(vehicle), class: "text-decoration-none text-danger" do %>
                View Details <i class="bi bi-arrow-up-right"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

