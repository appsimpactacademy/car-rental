<div class="col-lg-12 mx-auto mb-5">
  <div class="row">
    <div class="col-lg-6">
      <h1><%= @vehicle.name %></h1>
    </div>
    <div class="col-lg-6 text-end mt-2">
      <h3><%= number_to_currency @vehicle.base_price %></h3>
    </div>
  </div>
  <% if @vehicle.cover_image.attached? %>
    <div class="cover-image-section">
      <%= image_tag @vehicle.cover_image, class:'cover-img w-100 rounded-2' %>
    </div>
  <% end %>
  <div class="row mt-4">        
    <% @vehicle.vehicle_images.each do |image| %>
      <div class="col-3 mt-3">
        <%= image_tag image, class: "d-block rounded-2 w-100 vehicle-gallery-images" %>
      </div>
    <% end %>
  </div>  
  <div class="row">
    <div class="col-lg-9">
      <% if @vehicle.description.present? %>
        <div class="description">
          <h4 class="fw-bold">Description</h4>
          <h5><%= simple_format(@vehicle.description) %></h5>
        </div>
      <% end %>    
      <div class="mt-3 bg-light">
        <h3 class="p-3 mt-4 mb-3 fw-bold">Car Overview</h3>
        <p class="px-3"><i class="bi bi-fuel-pump fs-3 me-2"></i> <%= @vehicle.fule_type %></p>
        <p class="px-3"><i class="bi bi-calendar fs-3 me-2"></i> <%= @vehicle.registration_number %></p>        
        <p class="px-3"><i class="bi bi-car-front-fill fs-3 me-2"></i> <%= @vehicle.vehicle_type.try(:name) %></p>
        <p class="px-3"><i class="bi bi-currency-dollar fs-3 me-2"></i> <%= number_to_currency @vehicle.base_price %></p>
        <p class="px-3"><i class="bi bi-speedometer2 fs-3 me-2"></i> <%= number_with_precision @vehicle.price_per_km, precision: 2 %></p>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="mt-4 bg-light">
        <h3 class="p-3 mt-4 fw-bold">Owner Info</h3>
        <p class="px-3"><i class="bi bi-person fs-3 me-2"></i> <%= @vehicle.owner.try(:name) %></p>
        <p class="px-3"><i class="bi bi-telephone fs-3 me-2"></i> <%= @vehicle.owner.try(:contact_number) %></p>
      </div>
    </div>
    <div class="links">
      <%= link_to 'Edit', edit_admin_vehicle_path(@vehicle), class: 'btn btn-primary' %>
      <%= link_to 'Back', admin_vehicles_path, class: 'btn btn-secondary' %>
      <%= link_to 'Delete', admin_vehicle_path(@vehicle), data: { turbo_method: :delete, confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
