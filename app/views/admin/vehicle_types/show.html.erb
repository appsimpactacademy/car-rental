<h1>Vehicle Type Details</h1>

<div class="card">
  <div class="card-body">
    <h5 class="card-title mb-4"><%= @vehicle_type.name %></h5>
    <%= link_to 'Edit', edit_admin_vehicle_type_path(@vehicle_type), class: 'btn btn-primary' %>
    <%= link_to 'Back', admin_vehicle_types_path, class: 'btn btn-secondary' %>
    <%= link_to 'Delete', admin_vehicle_type_path(@vehicle_type), data: { turbo_method: :delete,confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </div>
</div>
